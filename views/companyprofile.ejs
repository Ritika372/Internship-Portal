<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" conten="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Profile</title>
    <style>
        .row-content {
    margin:0px auto;
    padding: 10px 0px 10px 0px;
    border-bottom: 1px ridge;
    min-height:30px;
}
    </style>
</head>
<body>
    <div class = "container">
        <div class = "container">
            <div class = "row">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                      <a class="nav-link active" href=<%= profile %> >Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href=<%= edit_profile%> >Edit Profile</a>
                    </li>       
                    <li class="nav-item">
                        <a class="nav-link" href=<%= applied_students%> >Applied Students</a>
                      </li>
                    <li class="nav-item">
                        <a class="nav-link" href=<%= log_out%> >Log Out</a>
                      </li>
                  </ul>
            </div>
        </div><br><br>
        <div class="row">
            <div class="col-md-6 align-self-center">
                <h2>Company Profile</h2>
            </div>
        </div>
        <div class = "row">
            <div class = "col-md-3 offset-md-4">
                <div class = "card">
                    <img class="card-header card-img-top" src="/img/blank_profile.png" alt="Profile">
                    <div class="card-body">
                        <h5 class="card-title"><%= companyname %> </h5>
                        <p class="card-text"><%= about_company %></p>
                    </div>
                </div>
            </div>
        </div>
        <br>
       <div class ="row">
           <div class = "col-md-9 offset-md-1">
               <div class = "card">
                  <div class="card-header">
                      Company Information
                  </div>
                  <div class = "card-body">
                      <div class = "row row-content">
                          <div class = "col-md-3">
                              <h6>Email : </h6>
                          </div>
                          <div class = "col-md-6">
                              <h6><%= email %></h6>
                          </div>
                      </div>
                      <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Website Link : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= website_link %></h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Organization Type : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= organization_type %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Industry Sector : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= industry_sector %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>About Company : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= about_company %> </h6>
                        </div>
                    </div>
                    <div class="card-header">
                        Job Profile Details
                     </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Job Profile </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= job_profile %></h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Pass Out Batch : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= pass_out_batch %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Recruitment Type :</h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%=recruitment_type %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Location :</h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%=location %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Tentative Date of Joining :</h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%=tentative_joining_date %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Job Description :</h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%=job_description %> </h6>
                        </div>
                    </div>
                    </div>
                  </div>
               </div>
           </div>
       </div>
    </div>
</body>
</html>
