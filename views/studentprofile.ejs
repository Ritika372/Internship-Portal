<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" conten="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/student.css">
    <style>
        .row-content {
            margin:0px auto;
            padding: 10px 0px 10px 0px;
            border-bottom: 1px ridge;
            min-height:30px;
        }
    </style>
</head>
<body>
    <div class = "container">
        <div class = "container">
            <div class = "row">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                      <a class="nav-link active" href=<%= profile %> >Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href= <%= read_experience %> >Read Experiences</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=<%= write_experience %> >Write Experiences</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href=<%= company_apply %> >Company </a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href=<%= applied%> >Applied Companies</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href=<%= edit_profile %> >Edit Profile</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href=<%= log_out %> >Log Out</a>
                      </li>
                  </ul>
            </div>
        </div><br><br>
        <div class="row">
            <div class="col-md-6 align-self-center">
                <h2>Student Profile</h2>
            </div>
        </div>
        <div class = "row justify-content-center">
            <div class = "col-md-3">
                <div class = "card">
                    <img class="card-header card-img-top" src="/img/blank_profile.png" alt="Profile">
                    <div class="card-body">
                        <h5 class="card-title"><%= firstname %> <%=lastname %></h5>
                        <p class="card-text"><%= branch %></p>
                    </div>
                </div>
            </div>
        </div>
        <br>
       <div class ="row justify-content-center">
           <div class = "col-md-9">
               <div class = "card">
                  <div class="card-header">
                      Personal Information
                  </div>
                  <div class = "card-body">
                      <div class = "row row-content">
                          <div class = "col-md-3">
                              <h6>Name : </h6>
                          </div>
                          <div class = "col-md-6">
                              <h6><%= firstname %> <%= lastname %></h6>
                          </div>
                      </div>
                      <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Degree : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= degree %></h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Branch : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= branch %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Expected year of graduation : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= grad %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Personal Email : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= personal_email %></h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Contact Number : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= contact_no %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>CGPA : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= cgpa %></h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Active Backlogs : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= active_backlogs %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Class 10th : </h6>
                        </div>
                        <div class = "col-md-3">
                            <h6>Percentage: <%= percent_10 %> </h6>
                        </div>
                        <div class = "col-md-3">
                            <h6>Board: <%= board_10 %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Class 12th : </h6>
                        </div>
                        <div class = "col-md-3">
                            <h6>Percentage: <%= percent_12 %> </h6>
                        </div>
                        <div class = "col-md-3">
                            <h6>Board: <%= board_12 %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Address : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= address %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>City : </h6>
                        </div>
                        <div class = "col-md-3">
                            <h6><%= city %> </h6>
                        </div>
                        <div class = "col-md-3">
                            <h6><%= state %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Country : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= country %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Linkedin : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6><%= linkdin %> </h6>
                        </div>
                    </div>
                    <div class = "row row-content">
                        <div class = "col-md-3">
                            <h6>Resume : </h6>
                        </div>
                        <div class = "col-md-6">
                            <h6> <a class="btn" href="<%= resumeUrl %>">Download Resume</a></h6>
                        </div>
                    </div>
                  </div>
               </div>
           </div>
       </div>
    </div>
</body>
</html>
