
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" conten="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <title>Profile</title>
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/student.css">
        <style>
            .row-content {
                margin:0px auto;
                padding: 10px 0px 10px 0px;
                border-bottom: 1px ridge;
                min-height:30px;
            }
        </style>
    </head>
    <body>
        <div class = "container">
            <div class = "container">
                <div class = "row">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                          <a class="nav-link " href=<%=  home %>>Home</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link " href=<%=  experiencelink %>>Experiences</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href=<%=  confirm_companieslink %>> Confirm Companies</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link" href=<%=  studentslink %> >Students</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link" href=<%=  companieslink %> >Companies</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link active" href=<%=  settings %> >Settings</a>
                          </li>
    
                      </ul>
                </div>
            </div><br><br>

            <div class = "row">
                <div class = "col-md-8">
                    <% admins.forEach( (admin) => { %>
                        <div class = "row">
                            <div class = "col-md-8 offset-md-2">
                                <div class = "card">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= admin.name%></h5>
                                        <h6 class="card-subtitle"><%= admin.email %></h6>
                                        <form action="/admin/confirmCompany" method="POST">
                                            <input type="hidden" name = "id" value = <%= admin._id %>>
                                        <button class="btn btn-primary" formaction=<%= remove %> type="submit">REMOVE</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div> <br>
                    <% }) %>
                </div>
            </div>
        </div>
        <form class = "loginContainer" action = <%= addAdmin %> , method="POST">
            <div class = "container">
              <div class="form-group">
                  <label>Name</label>
                  <input type="text" class="form-control" name = "name">
                </div>
              <div class="form-group">
                <label>Email address (Use your official mail ID)</label>
                <input type="email" class="form-control" name = "email">
              </div>
              <div class="form-group">
                <label>Set Password</label>
                <input type="password" class="form-control" name = "password">
              </div>
              <button type="submit" class="button button-pri">ADD ADMIN</button>
              </div>
            </form>
    </body>
    </html>
    