                            <div class = "card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= notice.created_by %></h5>
                                    <h6 class="card-subtitle"><%= notice.date %></h6>
                                    <p class = "card-text"><%= notice.notice %></p>
